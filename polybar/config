[bar/mainBar]

;------------;
; DIMENSIONS ;
;------------;

foreground = ${colors.foreground}
background = ${colors.background}
width = 100%
height = 26
offset-y = 0
offset-x = 0
radius = 2

border-top-size = 1
border-bottom-size = 1
border-right-size = 1
